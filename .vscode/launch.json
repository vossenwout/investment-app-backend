{
    "version": "0.2.0",
    "configurations": [
    {
      "request": "launch",
      "name": "Launch Program",
      "type": "node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--allow-all",
        "--env-file=.env.local"
      ],
      "attachSimplePort": 9229
    },
    {
      "request": "launch",
      "name": "Debug Current Test File",
      "type": "node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-brk",
        "--allow-all",
        "--env-file=.env.local"
      ],
      "attachSimplePort": 9229
    }
    ]
}
